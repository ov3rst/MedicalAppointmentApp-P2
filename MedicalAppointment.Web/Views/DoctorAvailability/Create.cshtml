@model MedicalAppointment.Web.Models.AppointmentsModels.DoctorAvailabilityModel

@{
    ViewData["Title"] = "Crear horario";
}

<h1>Crear nuevo horario</h1>

<h4>Horario de disponibilidad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DoctorAvailabilityId" class="control-label"></label>
                <input asp-for="DoctorAvailabilityId" class="form-control" />
                <span asp-validation-for="DoctorAvailabilityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorID" class="control-label"></label>
                <input asp-for="DoctorID" class="form-control" />
                <span asp-validation-for="DoctorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

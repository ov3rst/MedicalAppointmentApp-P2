@{
    var id = ViewData["Id"] ?? "0";
    var entidad = ViewData["Entity"] ?? "Elemento";
}

<div class="modal fade" id="DeleteModal-@id" data-bs-focus="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Eliminar @entidad</h5>
                <button type="button" class="close btn btn-outline-secondary" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Delete" method="post" asp-route-id="@id">
                    <input type="hidden" />
                    <p class="text-center fw-bold">¿Esta seguro que desea eliminar este Elemento?</p>
                    <div class="modal-footer">
                        <a class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</a>
                        <button type="submit" class="btn btn-danger" id="btnDelete">Eliminar</button>
                    </div>
                </form>
            </div>@* 
            <div class="modal-footer">
                
            </div> *@
        </div>
    </div>
</div>
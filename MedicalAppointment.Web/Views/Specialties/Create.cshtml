@model MedicalAppointment.Web.Models.MedicalModels.SpecialtiesModel

@{
    ViewData["Title"] = "Agregar Especialidad";
}

<h1>Agregar especialidad</h1>

<h4>Especialidad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="specialtyId" class="control-label"></label>
                <input asp-for="specialtyId" class="form-control" />
                <span asp-validation-for="specialtyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="specialtyName" class="control-label"></label>
                <input asp-for="specialtyName" class="form-control" />
                <span asp-validation-for="specialtyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
